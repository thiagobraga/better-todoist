.theme_dark
  &
  body
  #content
  .loading_screen
    background-color #252a33

  #top_bar
    background-color #1f232a

  #left_menu
    background-color #1f232a

    #top_filters
      li.current
        background-color darken(#1f232a, 10%)

    .expansion_panel
      header
        &
        &:before
          background-color #1f232a !important

  ul.items
    .on_menu_show
      background #1f232a !important

      .task_item_actions
        background transparent !important

  .ist_menu
    &
    & .no_hover td
      background-color #1f232a !important

  ::-webkit-scrollbar-track
    background-color initial

  ::-webkit-scrollbar-thumb
    background-color hsla(211, 13%, 26%, 1)

.theme_11.pref_page
  &
  .top_header
    background-color #252a33

  #settings_content
    background-color #1f232a
